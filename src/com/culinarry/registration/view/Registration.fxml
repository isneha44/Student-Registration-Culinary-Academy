<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.culinarry.registration.controller.RegistrationController"
      alignment="CENTER"
      spacing="10"
      stylesheets="/css/register.css">

    <Label text="Culinary Academy Registration" styleClass="title"/>

    <TextField fx:id="usernameField"
               promptText="Username"
               maxWidth="300"/>

    <TextField fx:id="emailField"
               promptText="Email"
               maxWidth="300"/>

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   maxWidth="300"/>

    <PasswordField fx:id="confirmPasswordField"
                   promptText="Confirm Password"
                   maxWidth="300"/>

    <ComboBox fx:id="roleComboBox"
              promptText="Select Role"
              maxWidth="300"/>

    <Button text="Register"
            onAction="#handleRegister"/>

    <Button text="Back to Login"
            onAction="#handleBackToLogin"/>

</VBox>