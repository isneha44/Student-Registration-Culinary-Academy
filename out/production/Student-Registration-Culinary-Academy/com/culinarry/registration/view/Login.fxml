<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.culinarry.registration.controller.LoginController"
      spacing="10"
      alignment="CENTER">

    <Label text="Culinary Academy Login" style="-fx-font-size: 20px;"/>

    <TextField fx:id="usernameField"
               promptText="Username"
               maxWidth="300"/>

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   maxWidth="300"/>

    <Button fx:id="loginButton"
            text="Login"
            maxWidth="200"/>
</VBox>